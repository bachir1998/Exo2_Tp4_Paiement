<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="250dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/inputs"
    android:padding="30dp">

    <TextView

        android:id="@+id/label_firstname"
        android:layout_width="200dp"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="40dp"
        android:text="Your Firstname :" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/label_lastname"
        android:layout_width="200dp"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="40dp"
        android:text="Your Lastname :" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/label_numcarte"
        android:layout_width="200dp"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="40dp"
        android:text="Your Numcarte :" />

    <EditText
        android:id="@+id/num_carte"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/label_code_cvc"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="40dp"
        android:text="Your Code CVC :" />

    <EditText
        android:id="@+id/code_cvc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/label_date_exp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:text="Date of expiration :"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/date_exp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />

</LinearLayout>


